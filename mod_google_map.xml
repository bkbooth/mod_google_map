<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.7" client="site">
    <name>Google Map</name>
    <author>e-motion design</author>
    <version>1.0.0</version>
    <creationDate>April 2013</creationDate>
    <copyright>Copyright (C) 2012. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>dev@e-motion.com.au</authorEmail>
    <authorUrl>www.e-motion.com.au</authorUrl>
    <description>Display a custom Google Map</description>
    <files>
        <filename module="mod_google_map">mod_google_map.php</filename>
        <filename>mod_google_map.xml</filename>
        <filename>index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
    	<fields name="params">
    		<fieldset name="basic">
    		    <field name="map_width" type="text" default="100%" label="Map Width" description="Enter the width of the map canvas. Use valid CSS value." />
    		    <field name="map_height" type="text" default="400px" label="Map Height" description="Enter the height of the map canvas. Use valid CSS value." />
    		    
    		    <field type="spacer" name="spacer_location" label="Location Options" />
    		    <field name="map_zoom" type="integer" default="15" label="Map Zoom" description="Choose the zoom level of the map." first="0" last="21" step="1" />
    		    <field name="centre_lat" type="text" default="-34.423431" label="Centre Latitude" description="Enter the latitude of the centre." />
    		    <field name="centre_lng" type="text" default="150.894291" label="Centre Longitude" description="Enter the longitude of the centre." />
    		    <field name="use_pin" type="radio" default="1" label="Use Pin" description="Do you want to display a pin on the map?">
    		        <option value="1">Yes</option>
    		        <option value="0">No</option>
    		    </field>
    		    <field name="pin_lat" type="text" default="-34.423431" label="Pin Latitude" description="Enter the latitude of the pin." />
    		    <field name="pin_lng" type="text" default="150.894291" label="Pin Longitude" description="Enter the longitude of the pin." />
    		    
    		    <field type="spacer" name="spacer_features" label="Map Features" />
    		    <field name="map_type" type="list" default="ROADMAP" label="Map Type" description="See: https://developers.google.com/maps/documentation/javascript/reference#MapTypeId">
    		        <option value="HYBRID">Hybrid</option>
    		        <option value="ROADMAP">Roadmap</option>
    		        <option value="SATELLITE">Satellite</option>
    		        <option value="TERRAIN">Terrain</option>
    		    </field>
    		    <field name="draggable" type="radio" default="1" label="Draggable" description="Enable dragging on the map?">
    		        <option value="1">Yes</option>
    		        <option value="0">No</option>
    		    </field>
    		    <field name="scrollwheel" type="radio" default="1" label="Scrollwheel" description="Enable scrollwheel zooming on the map?">
    		        <option value="1">Yes</option>
    		        <option value="0">No</option>
    		    </field>
    		    <field name="pan_control" type="radio" default="1" label="Pan Control" description="Show the pan control?">
    		        <option value="1">Yes</option>
    		        <option value="0">No</option>
    		    </field>
    		    <field name="pan_control_position" type="list" default="TOP_LEFT" label="Pan Control Position" description="See: https://developers.google.com/maps/documentation/javascript/reference#ControlPosition">
    		        <option value="BOTTOM_CENTER">Bottom Centre</option>
    		        <option value="BOTTOM_LEFT">Bottom Left</option>
    		        <option value="BOTTOM_RIGHT">Bottom Right</option>
    		        <option value="LEFT_BOTTOM">Left Bottom</option>
    		        <option value="LEFT_CENTER">Left Centre</option>
    		        <option value="LEFT_TOP">Left Top</option>
    		        <option value="RIGHT_BOTTOM">Right Bottom</option>
    		        <option value="RIGHT_CENTER">Right Centre</option>
    		        <option value="RIGHT_TOP">Right Top</option>
    		        <option value="TOP_CENTER">Top Centre</option>
    		        <option value="TOP_LEFT">Top Left</option>
    		        <option value="TOP_RIGHT">Top Right</option>
    		    </field>
    		    <field name="zoom_control" type="radio" default="1" label="Zoom Control" description="Show the zoom control?">
    		        <option value="1">Yes</option>
    		        <option value="0">No</option>
    		    </field>
    		    <field name="zoom_control_position" type="list" default="TOP_LEFT" label="Zoom Control Position" description="See: https://developers.google.com/maps/documentation/javascript/reference#ControlPosition">
    		        <option value="BOTTOM_CENTER">Bottom Centre</option>
    		        <option value="BOTTOM_LEFT">Bottom Left</option>
    		        <option value="BOTTOM_RIGHT">Bottom Right</option>
    		        <option value="LEFT_BOTTOM">Left Bottom</option>
    		        <option value="LEFT_CENTER">Left Centre</option>
    		        <option value="LEFT_TOP">Left Top</option>
    		        <option value="RIGHT_BOTTOM">Right Bottom</option>
    		        <option value="RIGHT_CENTER">Right Centre</option>
    		        <option value="RIGHT_TOP">Right Top</option>
    		        <option value="TOP_CENTER">Top Centre</option>
    		        <option value="TOP_LEFT">Top Left</option>
    		        <option value="TOP_RIGHT">Top Right</option>
    		    </field>
    		    <field name="zoom_control_style" type="list" default="DEFAULT" label="Zoom Control Style" description="See: https://developers.google.com/maps/documentation/javascript/reference#ZoomControlStyle">
    		        <option value="DEFAULT">Default</option>
    		        <option value="LARGE">Large</option>
    		        <option value="SMALL">Small</option>
    		    </field>
    		    <field name="streetview_control" type="radio" default="1" label="Street View Control" description="Show the street view control?">
    		        <option value="1">Yes</option>
    		        <option value="0">No</option>
    		    </field>
    		    <field name="streetview_control_position" type="list" default="UNDEFINED" label="Street View Control Position" description="See: https://developers.google.com/maps/documentation/javascript/reference#StreetViewControlOptions">
    		        <option value="UNDEFINED">Default</option>
    		        <option value="BOTTOM_CENTER">Bottom Centre</option>
    		        <option value="BOTTOM_LEFT">Bottom Left</option>
    		        <option value="BOTTOM_RIGHT">Bottom Right</option>
    		        <option value="LEFT_BOTTOM">Left Bottom</option>
    		        <option value="LEFT_CENTER">Left Centre</option>
    		        <option value="LEFT_TOP">Left Top</option>
    		        <option value="RIGHT_BOTTOM">Right Bottom</option>
    		        <option value="RIGHT_CENTER">Right Centre</option>
    		        <option value="RIGHT_TOP">Right Top</option>
    		        <option value="TOP_CENTER">Top Centre</option>
    		        <option value="TOP_LEFT">Top Left</option>
    		        <option value="TOP_RIGHT">Top Right</option>
    		    </field>
    		    <field name="maptype_control" type="radio" default="1" label="Map Type Control" description="Show the map type control?">
    		        <option value="1">Yes</option>
    		        <option value="0">No</option>
    		    </field>
    		    <field name="maptype_control_position" type="list" default="TOP_RIGHT" label="Map Type Control Position" description="See: https://developers.google.com/maps/documentation/javascript/reference#ControlPosition">
    		        <option value="BOTTOM_CENTER">Bottom Centre</option>
    		        <option value="BOTTOM_LEFT">Bottom Left</option>
    		        <option value="BOTTOM_RIGHT">Bottom Right</option>
    		        <option value="LEFT_BOTTOM">Left Bottom</option>
    		        <option value="LEFT_CENTER">Left Centre</option>
    		        <option value="LEFT_TOP">Left Top</option>
    		        <option value="RIGHT_BOTTOM">Right Bottom</option>
    		        <option value="RIGHT_CENTER">Right Centre</option>
    		        <option value="RIGHT_TOP">Right Top</option>
    		        <option value="TOP_CENTER">Top Centre</option>
    		        <option value="TOP_LEFT">Top Left</option>
    		        <option value="TOP_RIGHT">Top Right</option>
    		    </field>
    		    <field name="maptype_control_style" type="list" default="DEFAULT" label="Map Type Control Style" description="See: https://developers.google.com/maps/documentation/javascript/reference#MapTypeControlStyle">
    		        <option value="DEFAULT">Default</option>
    		        <option value="DROPDOWN_MENU">Dropdown Menu</option>
    		        <option value="HORIZONTAL_BAR">Horizontal Bar</option>
    		    </field>
    		    <field name="use_styles" type="radio" default="0" label="Use Styles" description="Use custom output styles?">
    		        <option value="1">Yes</option>
    		        <option value="0">No</option>
    		    </field>
    		    <field name="styles" type="textarea" default="" label="Custom map styles" description="Set custom styles for the map output. See https://developers.google.com/maps/documentation/javascript/reference#MapTypeStyle" rows="10" cols="10" filter="raw"/>
    		</fieldset>
    		<fieldset name="advanced">
    			<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="Suffix for individual css styling" />
    		</fieldset>
    	</fields>
    </config>
</extension>
